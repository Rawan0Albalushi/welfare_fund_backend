{
  "info": {
    "name": "User Donations API",
    "description": "API endpoints for user's donation history",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+96812345678\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login to get authentication token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "User Donations",
      "item": [
        {
          "name": "Get My Donations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/me/donations",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "me", "donations"]
            },
            "description": "Get all donations for the authenticated user"
          },
          "response": []
        },
        {
          "name": "Get My Donations - Paid Only",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/me/donations?status=paid",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "me", "donations"],
              "query": [
                {
                  "key": "status",
                  "value": "paid"
                }
              ]
            },
            "description": "Get only paid donations for the authenticated user"
          },
          "response": []
        },
        {
          "name": "Get My Donations - Gift Type",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/me/donations?type=gift",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "me", "donations"],
              "query": [
                {
                  "key": "type",
                  "value": "gift"
                }
              ]
            },
            "description": "Get only gift donations for the authenticated user"
          },
          "response": []
        },
        {
          "name": "Get My Donations - Paginated",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/me/donations?page=1&per_page=5",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "me", "donations"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "5"
                }
              ]
            },
            "description": "Get donations with pagination (5 items per page)"
          },
          "response": []
        },
        {
          "name": "Get My Donations - Combined Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/me/donations?status=paid&type=quick&per_page=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "me", "donations"],
              "query": [
                {
                  "key": "status",
                  "value": "paid"
                },
                {
                  "key": "type",
                  "value": "quick"
                },
                {
                  "key": "per_page",
                  "value": "10"
                }
              ]
            },
            "description": "Get paid quick donations with 10 items per page"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://192.168.1.101:8000",
      "description": "Base URL for the API"
    },
    {
      "key": "auth_token",
      "value": "",
      "description": "Authentication token obtained from login"
    }
  ]
}
