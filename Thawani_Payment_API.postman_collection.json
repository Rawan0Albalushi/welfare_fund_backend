  },
  "item": [
    {
      "name": "Create Payment Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"products\": [\n    {\n      \"name\": \"Donation\",\n      \"quantity\": 1,\n      \"unit_amount\": 5000\n    }\n  ],\n  \"client_reference_id\": \"donation_{{$timestamp}}\",\n  \"success_url\": \"https://your-app.com/success\",\n  \"cancel_url\": \"https://your-app.com/cancel\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/payments/create",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "payments", "create"]
        },
        "description": "Create a new payment session with Thawani"
      },
      "response": []
    },
    {
