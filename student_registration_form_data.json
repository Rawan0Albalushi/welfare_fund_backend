{
  "form_structure": {
    "title": "نموذج تسجيل الطالب",
    "description": "يرجى ملء جميع الحقول المطلوبة لتسجيل طلبك",
    "sections": [
      {
        "title": "البيانات الشخصية",
        "fields": [
          {
            "name": "personal.full_name",
            "label": "الاسم الكامل",
            "type": "text",
            "required": true,
            "maxLength": 255,
            "placeholder": "أدخل اسمك الكامل"
          },
          {
            "name": "personal.student_id",
            "label": "رقم الطالب",
            "type": "text",
            "required": true,
            "maxLength": 50,
            "placeholder": "أدخل رقم الطالب"
          },
          {
            "name": "personal.email",
            "label": "البريد الإلكتروني",
            "type": "email",
            "required": false,
            "placeholder": "أدخل بريدك الإلكتروني"
          },
          {
            "name": "personal.phone",
            "label": "رقم الهاتف",
            "type": "tel",
            "required": true,
            "pattern": "^[0-9+\\-\\s()]+$",
            "placeholder": "أدخل رقم الهاتف"
          },
          {
            "name": "personal.gender",
            "label": "الجنس",
            "type": "select",
            "required": true,
            "options": [
              {"value": "male", "label": "ذكر"},
              {"value": "female", "label": "أنثى"}
            ]
          }
        ]
      },
      {
        "title": "البيانات الأكاديمية",
        "fields": [
          {
            "name": "academic.university",
            "label": "الجامعة",
            "type": "text",
            "required": true,
            "maxLength": 255,
            "placeholder": "أدخل اسم الجامعة"
          },
          {
            "name": "academic.college",
            "label": "الكلية",
            "type": "text",
            "required": true,
            "maxLength": 255,
            "placeholder": "أدخل اسم الكلية"
          },
          {
            "name": "academic.major",
            "label": "التخصص",
            "type": "text",
            "required": true,
            "maxLength": 255,
            "placeholder": "أدخل التخصص"
          },
          {
            "name": "academic.program",
            "label": "البرنامج",
            "type": "text",
            "required": true,
            "maxLength": 255,
            "placeholder": "أدخل البرنامج الدراسي"
          },
          {
            "name": "academic.academic_year",
            "label": "السنة الدراسية",
            "type": "select",
            "required": true,
            "options": [
              {"value": 1, "label": "السنة الأولى"},
              {"value": 2, "label": "السنة الثانية"},
              {"value": 3, "label": "السنة الثالثة"},
              {"value": 4, "label": "السنة الرابعة"},
              {"value": 5, "label": "السنة الخامسة"},
              {"value": 6, "label": "السنة السادسة"}
            ]
          },
          {
            "name": "academic.gpa",
            "label": "المعدل التراكمي",
            "type": "number",
            "required": true,
            "min": 0,
            "max": 4,
            "step": 0.01,
            "placeholder": "أدخل المعدل التراكمي"
          }
        ]
      },
      {
        "title": "البيانات المالية",
        "fields": [
          {
            "name": "financial.income_level",
            "label": "مستوى الدخل",
            "type": "select",
            "required": true,
            "options": [
              {"value": "low", "label": "منخفض"},
              {"value": "medium", "label": "متوسط"},
              {"value": "high", "label": "مرتفع"}
            ]
          },
          {
            "name": "financial.family_size",
            "label": "حجم الأسرة",
            "type": "select",
            "required": true,
            "options": [
              {"value": "1-3", "label": "1-3 أفراد"},
              {"value": "4-6", "label": "4-6 أفراد"},
              {"value": "7-9", "label": "7-9 أفراد"},
              {"value": "10+", "label": "10+ أفراد"}
            ]
          }
        ]
      },
      {
        "title": "المستندات",
        "fields": [
          {
            "name": "id_card_image",
            "label": "صورة البطاقة الشخصية",
            "type": "file",
            "required": false,
            "accept": "image/jpeg,image/png,application/pdf",
            "maxSize": "10MB",
            "description": "يمكن رفع صورة أو ملف PDF بحجم أقصى 10 ميجابايت"
          }
        ]
      }
    ]
  },
  "api_endpoint": {
    "url": "/api/v1/students/registration",
    "method": "POST",
    "content_type": "multipart/form-data",
    "authentication": "Bearer Token Required"
  },
